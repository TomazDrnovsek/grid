<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Android 12+ splash: pure dark background, no icon -->
    <style name="LaunchTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <!-- Solid background for the splash -->
        <item name="android:windowSplashScreenBackground">@color/launch_background_dark</item>
        <!-- Supply a fully transparent drawable so no icon appears -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/transparent_splash</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/transparent</item>

        <!-- Keep your existing window background as a fallback -->
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Mirrors your existing NormalTheme -->
    <style name="NormalTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowBackground">@android:color/black</item>
    </style>
</resources>
